<% include ../partials/header %>

<div class="container">
<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 1</li>
            <li class="list-group-item">Info 1</li>
        </div>
    </div>
    <div class="col-md-9 center">
        <div class="thumbnail">
                <img src="<%= campground.img %>" alt="<%= campground.name %>" class="img-responsive">
                <div class="caption-full">
                    <h4 class="pull-right">Rs 3700/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>Submitted By: <%= campground.author.username %></p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ //defined in app.js %>
                        <a href='<%= campground.id %>/edit' class='btn btn-xs btn-warning'>Edit</a>
                        <form id='delete-form' action="/campgrounds/<%= campground.id %>?_method=delete" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                    
                </div>
        </div>
        <div class="well">
            <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new">Add New Comment</a>
            </div>
            <hr>            
            <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                            <strong><%= comment.author.username%></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text%></p>
                            <a href="/campgrounds/<%= campground.id %>/comments/<%= comment._id %>/edit" class='btn btn-xs btn-warning'>Edit</a>                            
                    </div>
                        
                </div>                    
            <% }); %>
            
        </div>
    </div>



</div>
</div>


<% include ../partials/footer %>