<% include ../partials/header %>   

<header class="jumbotron">
    <div class="container"><!-- for keeping the contents of jumbotron aligned properly -->
    <h1>Welcome To YelpCamp!</h1>
    <p>view our hand-picked campgrounds from all over the India</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </div>
</header>

<div class="row" style="display:flex;flex-wrap:wrap">
    <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds!</h3>
    </div>
</div>
<div class="row text-center">
<% campgroundslist.forEach(function(camp){ %>
    <div class=" col-sm-6 col-md-3">
        <div class="thumbnail">
                <img src="<%=camp.img %>" alt="<%= camp.name %>"> 
                <div class="caption">
                    <h4><%=camp.name %> (<%=camp.state %>)</h4>
                </div>
                <p><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a></p>
        </div>
    </div>    
   <% }); %>
</div>

<% include ../partials/footer %>